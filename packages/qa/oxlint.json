{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "rules": {
    "correctness": "warn",
    "suspicious": "warn",
    "style": "warn",
    "perf": "warn",
    "restriction": "off"
  },
  "deny": [
    "typescript/no-explicit-any",
    "typescript/no-non-null-assertion",
    "typescript/use-unknown-in-catch-callback-variable"
  ],
  "overrides": [
    {
      "files": ["**/*.test.*", "**/*.spec.*"],
      "rules": {
        "correctness/no-unused-vars": "off"
      }
    }
  ]
}
