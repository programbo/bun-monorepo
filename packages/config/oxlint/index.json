{
  "categories": {
    "correctness": "warn",
    "suspicious": "warn",
    "perf": "warn",
    "style": "warn",
    "restriction": "off"
  },
  "plugins": [],
  "deny": [
    "typescript/no-explicit-any",
    "typescript/no-non-null-assertion",
    "typescript/use-unknown-in-catch-callback-variable"
  ],
  "ignore": ["node_modules", "dist", "build", ".next", "out", "coverage"],
  "env": {
    "browser": false,
    "deno": false,
    "node": true,
    "es2021": true
  }
}
