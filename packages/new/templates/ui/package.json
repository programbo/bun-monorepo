{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": [
    "./src/index.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./radio": {
      "types": "./dist/radio.d.ts",
      "import": "./dist/radio.js",
      "require": "./dist/radio.cjs"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "require": "./dist/utils.cjs"
    },
    "./index.css": "./src/index.css"
  },
  "files": [
    "dist",
    "src/index.css"
  ],
  "scripts": {
    "dev": "bunup --watch",
    "build": "bunup",
    "postinstall": "bun run scripts/postinstall.ts"
  },
  "dependencies": {
    "tailwind-merge": "^2.5.3",
    "tailwind-variants": "^0.4.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "@types/react": "^19",
    "bunup": "latest",
    "react": "^19",
    "react-dom": "^19"
  }
}
