{
  "name": "bun-monorepo-template",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --parallel --workspaces --if-present dev",
    "dev:tui": "bun run scripts/dev-tui.ts",
    "build": "bun run --workspaces --if-present build",
    "lint": "bun run lint:all",
    "typecheck": "bun run typecheck:all",
    "format": "bun run format:all",
    "qa": "bun run lint:all && bun run typecheck:all && bun run format:all",
    "lint:all": "bun run --workspaces --if-present lint:pkg",
    "typecheck:all": "bun run --workspaces --if-present typecheck:pkg",
    "format:all": "bun run --workspaces --if-present format:pkg",
    "qa:init": "bun run packages/qa/scripts/qa-init.ts",
    "new": "bun run packages/new/index.ts"
  },
  "devDependencies": {
    "@repo/qa": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "latest",
    "concurrently": "latest",
    "oxlint": "latest",
    "prettier": "latest",
    "prettier-plugin-tailwindcss": "latest",
    "typescript": "latest"
  }
}
